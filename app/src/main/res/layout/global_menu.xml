</TextView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:textStyle="bold"
    android:id="@+id/text_email"
    android:fontFamily="monospace"
    android:text="  bhismydv2912@gmail.com">

</TextView>
    </LinearLayout>
</FrameLayout>